{% extends 'base.html.twig' %}

{% block title %}Hello ApodController!
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1 class="title-one">The picture of the day by the Nasa</h1>
		{% if picture is defined and picture is not null %}
			{% if picture.date|date('Y-m-d') < "now"|date('Y-m-d') %}
				<span class="message-info">The picture of today is a video. we will display the picture of the previous day!</span>
			{% endif %}
			<h2>{{ picture.title }}
				-
				<span class="date-bloc">{{ picture.date | date('d/m/Y') }}</span>
			</h2>
			<img class="image-bloc" src="{{ picture.image }}" alt="{{ picture.title }}">
			<p>{{ picture.explanation }}</p>
		{% else %}
			<h2>
				Sorry! There's no picture of Nasa to display. Please try later!
			</h2>
		{% endif %}
	</div>
{% endblock %}
